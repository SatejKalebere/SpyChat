<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_register"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:orientation="vertical">
       <TextView
           android:id="@+id/textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:layout_gravity="center"
           android:paddingHorizontal="20dp"
           android:background="@drawable/mystyle_white"
           android:layout_margin="20dp"
           android:text="Reset Password"
           android:textAlignment="center"
           android:textColor="@android:color/white"
           android:textSize="30sp"
           android:textStyle="bold"
            />

       <EditText
           android:background="@drawable/mystyle_realwhite"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:id="@+id/resetpass_email"
           android:hint="Your Email Adress..."
           android:layout_gravity="center_horizontal"
           android:inputType="textEmailAddress"
           android:layout_margin="20dp"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/Btn_resetPass"
           android:background="@drawable/mystyle_realwhite"
           android:layout_gravity="center_horizontal"
           android:text="Reset"
           android:padding="10dp"
           android:textStyle="bold"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           android:textAlignment="center"
           android:textColor="@android:color/white"
           android:text="By clicking Reset button,\nyou will receive an email to reset your password for SpyChat."/>


   </LinearLayout>

</RelativeLayout>